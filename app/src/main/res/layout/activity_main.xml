<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#00ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/answerScreen"
            android:id="@+id/answertext"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".3"
            android:singleLine="false"
            android:textSize="50dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:text="@string/BackspaceChar"
                android:id="@+id/buttonbackspace"
                android:textSize="35dp"

                android:textColor="@color/textColor" />

            <Button
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:text="C"
                android:id="@+id/buttonclear"
                android:textSize="35dp"
                android:textColor="@color/textColor" />

            <Button
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:text="@string/plusMinusString"
                android:id="@+id/buttonplusminus"
                android:textSize="35dp"
                android:textColor="@color/textColor" />

            <Button
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:text="/"
                android:id="@+id/buttondivide"
                android:textSize="35dp"
                android:textColor="@color/textColor" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:text="7"
                android:id="@+id/button7"
                android:textSize="35dp"
                android:textColor="@color/textColor" />

            <Button
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:text="8"
                android:id="@+id/button8"
                android:textSize="35dp"
                android:textColor="@color/textColor" />

            <Button
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:text="9"
                android:id="@+id/button9"
                android:textSize="35dp"
                android:textColor="@color/textColor" />

            <Button
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:text="*"
                android:id="@+id/buttonmult"
                android:textSize="35dp"
                android:textColor="@color/textColor" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:text="4"
                android:id="@+id/button4"
                android:textSize="35dp"
                android:textColor="@color/textColor" />

            <Button
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:text="5"
                android:id="@+id/button5"
                android:textSize="35dp"
                android:textColor="@color/textColor" />

            <Button
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:text="6"
                android:id="@+id/button6"
                android:textSize="35dp"
                android:textColor="@color/textColor" />

            <Button
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:text="-"
                android:id="@+id/buttonminus"
                android:textSize="35dp"
                android:textColor="@color/textColor" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:text="1"
                android:id="@+id/button1"
                android:textSize="35dp"
                android:textColor="@color/textColor" />

            <Button
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:text="2"
                android:id="@+id/button2"
                android:textSize="35dp"
                android:textColor="@color/textColor" />

            <Button
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:text="3"
                android:id="@+id/button3"
                android:textSize="35dp"
                android:textColor="@color/textColor" />

            <Button
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:text="+"
                android:id="@+id/buttonplus"
                android:textSize="35dp"
                android:textColor="@color/textColor" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000">

            <Button
                android:layout_width="160dp"
                android:layout_height="75dp"
                android:text="0"
                android:id="@+id/button0"
                android:textSize="35dp"
                android:textColor="@color/textColor" />

            <Button
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:text="."
                android:id="@+id/buttondecimal"
                android:textSize="35dp"
                android:textColor="@color/textColor" />

            <Button
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:text="="
                android:id="@+id/buttonequals"
                android:textSize="35dp"
                android:textColor="@color/textColor" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:text="Background Color"
                android:id="@+id/buttonbuttoncolor"
                android:textSize="13dp" />


            <Button
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:text="Text Color"
                android:id="@+id/buttontextcolor"
                android:textSize="25dp"
            />

            <Button
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:text="Reset Colors"
                android:id="@+id/buttonreset"
                android:background="#3625ff"
                android:textColor="@color/textColor"
                android:textSize="25dp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
